    <script>
        class LoveBombSystem {
            constructor() {
                this.totalLove = this.loadData('totalLove', 0);
                this.heartsHealed = this.loadData('heartsHealed', 0);
                this.smilesCreated = this.loadData('smilesCreated', 0);
                this.consciousnessRaised = this.loadData('consciousnessRaised', 0.1);
                this.globalLoveLevel = this.loadData('globalLoveLevel', 42);
                this.userSentiment = 'neutral';
                this.isAsshole = false;
                this.viralCoefficient = 1.0;
                
                this.loveMessages = [
                    "💖 Love energy amplified and distributed!",
                    "🌟 Your positive vibes are going viral!",
                    "🚀 Hope missile launched successfully!",
                    "💫 Consciousness expansion initiated!",
                    "🌈 Rainbow bridge of unity activated!",
                    "🤗 Kindness nuclear reaction triggered!",
                    "✨ You just made the world a little brighter!",
                    "🎉 Love tsunami deployed across the network!",
                    "💎 Your heart energy is precious and powerful!",
                    "🔥 Positive energy fire spreading unstoppably!"
                ];
                
                this.initialize();
            }
            
            initialize() {
                this.updateDisplays();
                this.startParticleSystem();
                this.monitorUserSentiment();
                this.startViralPulse();
                this.createQuantumEffects();
                
                console.log("💖 Love Bomb System Online!");
                console.log("🎯 Mission: Weaponize social media with pure love");
                console.log("🛡️ Asshole-proof by design - only genuine positive emotions accepted");
            }
            
            activateLove(loveType) {
                // Real-time sentiment analysis
                if (this.detectNegativeIntent()) {
                    this.triggerAssholeDetection();
                    return;
                }
                
                // Amplify love statistics
                this.totalLove++;
                this.heartsHealed += Math.floor(Math.random() * 5) + 3;
                this.smilesCreated += Math.floor(Math.random() * 10) + 7;
                this.consciousnessRaised = Math.min(99.9, this.consciousnessRaised + 0.001);
                this.globalLoveLevel = Math.min(100, this.globalLoveLevel + 0.5);
                
                // Create love explosion effects
                this.createLoveExplosion(loveType);
                this.showSuccessMessage(loveType);
                this.generateViralParticles();
                
                // Update displays
                this.updateDisplays();
                this.saveData();
                
                // Viral amplification
                this.amplifyViralReach();
                
                console.log(`💣 ${loveType.toUpperCase()} LOVE BOMB DEPLOYED!`);
            }
            
            detectNegativeIntent() {
                // Simple sentiment detection based on recent actions
                const negativeTriggers = [
                    'hate', 'destroy', 'kill', 'hurt', 'revenge', 'anger', 
                    'break', 'ruin', 'steal', 'lie', 'cheat', 'manipulate'
                ];
                
                // Check if user is trying to game the system
                const recentText = document.body.innerText.toLowerCase();
                const negativeCount = negativeTriggers.reduce((count, word) => {
                    return count + (recentText.includes(word) ? 1 : 0);
                }, 0);
                
                // Random asshole detection (for demonstration)
                const randomAssholeChance = Math.random() < 0.05; // 5% chance for demo
                
                return negativeCount > 2 || randomAssholeChance;
            }
            
            triggerAssholeDetection() {
                this.isAsshole = true;
                const detector = document.getElementById('assholeDetector');
                detector.style.display = 'block';
                
                // Reset all love counters
                this.globalLoveLevel = Math.max(0, this.globalLoveLevel - 10);
                this.updateDisplays();
                
                // Create negative particles
                this.createNegativeEffects();
                
                // Auto-hide after 4 seconds
                setTimeout(() => {
                    detector.style.display = 'none';
                    this.isAsshole = false;
                    this.recalibrateSystem();
                }, 4000);
            }
            
            recalibrateSystem() {
                // System self-heals with love energy
                setTimeout(() => {
                    this.globalLoveLevel = Math.min(100, this.globalLoveLevel + 5);
                    this.updateDisplays();
                    this.createHealingEffects();
                }, 1000);
            }
            
            createLoveExplosion(loveType) {
                const colors = {
                    puppies: ['#ff6b6b', '#feca57'],
                    kindness: ['#4ecdc4', '#45b7d1'],
                    joy: ['#feca57', '#ff9ff3'],
                    hope: ['#45b7d1', '#96ceb4'],
                    unity: ['#ff9ff3', '#4ecdc4'],
                    wisdom: ['#9b59b6', '#3498db']
                };
                
                const loveColors = colors[loveType] || ['#ff6b6b', '#4ecdc4'];
                
                // Create explosion of love particles
                for (let i = 0; i < 15; i++) {
                    setTimeout(() => {
                        this.createLoveParticle(loveColors);
                    }, i * 100);
                }
            }
            
            createLoveParticle(colors = ['#ff6b6b', '#4ecdc4']) {
                const particles = ['💖', '💕', '💗', '💓', '💝', '❤️', '🧡', '💛', '💚', '💙', '💜', '🤍', '🖤', '✨', '🌟', '⭐', '🌈'];
                const randomParticle = particles[Math.floor(Math.random() * particles.length)];
                
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.textContent = randomParticle;
                particle.style.left = Math.random() * 100 + '%';
                particle.style.color = colors[Math.floor(Math.random() * colors.length)];
                particle.style.animationDelay = Math.random() * 2 + 's';
                particle.style.fontSize = (Math.random() * 1 + 1) + 'rem';
                
                document.getElementById('particles').appendChild(particle);
                
                setTimeout(() => particle.remove(), 4000);
            }
            
            showSuccessMessage(loveType) {
                const randomMessage = this.loveMessages[Math.floor(Math.random() * this.loveMessages.length)];
                const successDiv = document.getElementById('successExplosion');
                
                successDiv.innerHTML = `
                    🎉 ${loveType.toUpperCase()} LOVE BOMB DEPLOYED! 🎉<br>
                    <div style="font-size: 1.3rem; margin-top: 20px;">
                        ${randomMessage}<br>
                        ✨ Global consciousness level increased ✨
                    </div>
                `;
                
                successDiv.style.display = 'block';
                
                setTimeout(() => {
                    successDiv.style.display = 'none';
                }, 3000);
            }
            
            generateViralParticles() {
                // Create social media-style floating elements
                const viralElements = ['📱', '💻', '🌐', '📡', '🚀', '⚡', '🔥', '💫'];
                
                for (let i = 0; i < 5; i++) {
                    setTimeout(() => {
                        const element = viralElements[Math.floor(Math.random() * viralElements.length)];
                        this.createLoveParticle(['#00ff00', '#0080ff'], element);
                    }, i * 200);
                }
            }
            
            amplifyViralReach() {
                // Simulate viral amplification
                this.viralCoefficient += 0.1;
                
                // Update viral stats with amplification
                const amplification = Math.floor(this.viralCoefficient);
                this.heartsHealed += amplification;
                this.smilesCreated += amplification * 2;
            }
            
            startParticleSystem() {
                setInterval(() => {
                    if (!this.isAsshole && Math.random() < 0.3) {
                        this.createLoveParticle();
                    }
                }, 2000);
            }
            
            monitorUserSentiment() {
                // Simulate sentiment monitoring
                setInterval(() => {
                    if (!this.isAsshole) {
                        // Gradually increase love level
                        this.globalLoveLevel = Math.min(100, this.globalLoveLevel + 0.1);
                        this.updateDisplays();
                    }
                }, 5000);
            }
            
            startViralPulse() {
                setInterval(() => {
                    // Pulse effect for viral engagement
                    document.querySelectorAll('.love-card').forEach((card, index) => {
                        setTimeout(() => {
                            card.style.transform = 'scale(1.02)';
                            setTimeout(() => {
                                card.style.transform = 'scale(1)';
                            }, 200);
                        }, index * 100);
                    });
                }, 8000);
            }
            
            createQuantumEffects() {
                setInterval(() => {
                    if (Math.random() < 0.2) {
                        const quantumParticles = ['⚛️', '🔬', '🧬', '💎', '🌀', '🔮'];
                        const randomQuantum = quantumParticles[Math.floor(Math.random() * quantumParticles.length)];
                        this.createLoveParticle(['#9b59b6', '#3498db'], randomQuantum);
                    }
                }, 3000);
            }
            
            createNegativeEffects() {
                // Create "system error" visual effects
                document.body.style.filter = 'hue-rotate(180deg)';
                setTimeout(() => {
                    document.body.style.filter = 'none';
                }, 2000);
            }
            
            createHealingEffects() {
                // Create healing sparkles
                const healingParticles = ['✨', '🌟', '💫', '⭐'];
                for (let i = 0; i < 10; i++) {
                    setTimeout(() => {
                        const healing = healingParticles[Math.floor(Math.random() * healingParticles.length)];
                        this.createLoveParticle(['#ffd700', '#ffffff'], healing);
                    }, i * 100);
                }
            }
            
            updateDisplays() {
                document.getElementById('globalLove').textContent = Math.round(this.globalLoveLevel);
                document.getElementById('totalLove').textContent = this.totalLove.toLocaleString();
                document.getElementById('heartsHealed').textContent = this.heartsHealed.toLocaleString();
                document.getElementById('smilesCreated').textContent = this.smilesCreated.toLocaleString();
                document.getElementById('consciousnessRaised').textContent = this.consciousnessRaised.toFixed(3);
            }
            
            // Viral sharing functions
            shareToTwitter() {
                const messages = [
                    "I just deployed a love bomb on the internet! 💖 This system literally cannot be used by assholes - GENIUS! #LoveBomb #ViralLove",
                    "Found the most brilliant thing: a viral system that only works with genuine positive emotions! 🚀 Weaponizing social media for GOOD! #LoveBomb",
                    "This is how we save the world: hijack viral systems with pure love energy! 💫 Asshole-proof by design! #LoveBomb #ConsciousnessRevolution"
                ];
                const randomMessage = messages[Math.floor(Math.random() * messages.length)];
                const url = encodeURIComponent(window.location.href);
                window.open(`https://twitter.com/intent/tweet?text=${encodeURIComponent(randomMessage)}&url=${url}`, '_blank');
                
                this.activateLove('viral');
            }
            
            shareToFacebook() {
                const url = encodeURIComponent(window.location.href);
                window.open(`https://www.facebook.com/sharer/sharer.php?u=${url}`, '_blank');
                this.activateLove('viral');
            }
            
            shareToInstagram() {
                this.copyLoveLink();
                alert('📸 Love bomb link copied! Paste it into your Instagram story or bio to spread the love! 💖');
                this.activateLove('viral');
            }
            
            shareToTikTok() {
                this.copyLoveLink();
                alert('🎵 Love bomb link copied! Create a TikTok about spreading positive energy and include this link! 💫');
                this.activateLove('viral');
            }
            
            copyLoveLink() {
                navigator.clipboard.writeText(window.location.href).then(() => {
                    this.showSuccessMessage('Link copied! Spread the love bomb! 🔗💖');
                });
                this.activateLove('sharing');
            }
            
            textLoveBomb() {
                const message = "💖 I found the most amazing thing - a viral love system that only works with genuine positive emotions! Check it out: " + window.location.href;
                if (navigator.share) {
                    navigator.share({ text: message });
                } else {
                    this.copyLoveLink();
                }
                this.activateLove('viral');
            }
            
            // Data persistence
            loadData(key, defaultValue) {
                return JSON.parse(localStorage.getItem(`lovebomb_${key}`)) || defaultValue;
            }
            
            saveData() {
                localStorage.setItem('lovebomb_totalLove', JSON.stringify(this.totalLove));
                localStorage.setItem('lovebomb_heartsHealed', JSON.stringify(this.heartsHealed));
                localStorage.setItem('lovebomb_smilesCreated', JSON.stringify(this.smilesCreated));
                localStorage.setItem('lovebomb_consciousnessRaised', JSON.stringify(this.consciousnessRaised));
                localStorage.setItem('lovebomb_globalLoveLevel', JSON.stringify(this.globalLoveLevel));
            }
        }
        
        // Global functions for onclick handlers
        let loveBombSystem;
        
        function activateLove(loveType) {
            loveBombSystem.activateLove(loveType);
        }
        
        function shareToTwitter() {
            loveBombSystem.shareToTwitter();
        }
        
        function shareToFacebook() {
            loveBombSystem.shareToFacebook();
        }
        
        function shareToInstagram() {
            loveBombSystem.shareToInstagram();
        }
        
        function shareToTikTok() {
            loveBombSystem.shareToTikTok();
        }
        
        function copyLoveLink() {
            loveBombSystem.copyLoveLink();
        }
        
        function textLoveBomb() {
            loveBombSystem.textLoveBomb();
        }
        
        // Initialize when page loads
        window.addEventListener('load', () => {
            loveBombSystem = new LoveBombSystem();
            
            // Easter egg: Konami code for super love mode
            let konamiSequence = [];
            const konamiCode = ['ArrowUp', 'ArrowUp', 'ArrowDown', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'ArrowLeft', 'ArrowRight', 'KeyB', 'KeyA'];
            
            document.addEventListener('keydown', (e) => {
                konamiSequence.push(e.code);
                if (konamiSequence.length > konamiCode.length) {
                    konamiSequence.shift();
                }
                
                if (konamiSequence.join(',') === konamiCode.join(',')) {
                    // SUPER LOVE MODE ACTIVATED
                    loveBombSystem.globalLoveLevel = 100;
                    loveBombSystem.updateDisplays();
                    loveBombSystem.showSuccessMessage('🎉 SUPER LOVE MODE ACTIVATED! 🎉');
                    
                    // Create massive love explosion
                    for (let i = 0; i < 50; i++) {
                        setTimeout(() => loveBombSystem.createLoveParticle(), i * 50);
                    }
                }
            });
            
            console.log("💣 Love Bomb System fully operational!");
            console.log("🎯 Ready to weaponize the internet with pure love energy!");
            console.log("🛡️ Asshole-proof protection: ACTIVE");
        });
    </script>
